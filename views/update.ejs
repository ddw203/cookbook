<div class="container" >
    <div class="divheader">
        <div id="div_headernav">
            <div id="div_headernav_left">
                <a href="/user/userinfo/<%= uid %>" target="_self"> <img style="border: 0;width: 100px;height: 100px;margin-left: 50px" src="/img/icon/logo3.png" >
                </a>

            </div>
        </div>
    </div>

    <div class="divbody row">
        <div class="divbody_left col-lg-5 col-md-4 ">
            <img src="/img/icon/logo3.png" id="lefticon"alt="">
        </div>
        <div class="divbody_right col-lg-7 col-md-8" >
            <div class="msgdiv">
                <div class="msgdiv_mid">
                    &nbsp;
                </div>
                <div class="msgdiv_header">
                    <h2>我的食刻资料</h2>
                </div>
                <div class="msgdiv_mid">
                    &nbsp;
                </div>
                <div class="msgdiv_body">
                    <form class="form-signin" action="/update/myupdate" enctype="multipart/form-data"  role="form" method="post">
                        <div class="msgdiv_i">
                            <label for="" >昵称:</label>
                            <input type="text" name="uname" id="uname" required autofocus value="">
                        </div>
                        <div class="msgdiv_i">
                            <label for="">密码:</label>
                            <input type="text" name="upwd" id="upwd"placeholder="请输入新密码" required autofocus>
                        </div>
                        <div class="msgdiv_i">
                            <label for="">邮箱:</label>
                            <input type="email" name="email" id="email" required autofocus>
                        </div>
                        <div class="msgdiv_i">
                            <label for="">自我介绍:</label>
                            <textarea name="udpt" id="udpt" cols="20" rows="10"></textarea>
                        </div>
                        <div class="msgdiv_i ">
                            <label for="" style="margin-top: 10px">头像:</label>
                            <div class="row">
                                <div class="msgdiv_i_src_div col-7">
                                    <img src="" alt="" class="msgdiv_i_src" id="upic">

                                    <input type="text" style="display: none" name="picvalue"  value="1.jpg" id="picvalue">
                                </div>
                                <div class="msgdiv_i_src_div col-5 form-group ">
                                    <input type="text" value="<%=uid%>" style="display: none">
                                    <input type="button" class="btn btn-primary" value="系统头像" onclick="shuaxin()"/>
                                    <label type="button" class="btn btn-primary" for="picfile"  style="margin-top: 20px">
                                        本地头像
                                        <input type="file" id="picfile" name="newpicvalue" style="display: none" onchange="freshUpicAndValue(this)">
                                    </label>
                                </div>
                            </div>

                        </div>
                        <div class="msgdiv_i">
                            <div style="padding-left: 50px;padding-right: 50px;margin-top: 10px" >
                                <button class="btn btn-danger"  type="submit" >确认修改</button>
                            </div>

                        </div>


                    </form>
                    <div class="msgdiv_mid">
                        &nbsp;
                    </div>
                </div>

            </div>
        </div>

    </div>


</div>
