<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>食 刻 | 修 改 个 人 资 料</title>
    <link rel="stylesheet" href="/css/bootstrap.css"/>
    <link rel="stylesheet" href="/css/regist.css"/>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script>
        $(function (){
            //要截数据！
            var uid='<%=uid%>'
            var username='<%=uname%>';

            var uemail='<%=email%>';
            var upicvalue='<%=picvalue%>';
            var udpt='<%=udpt%>';
            //
            //input数据绑定
            var nameinput=document.getElementById('uname')
            nameinput.value=username;

            var emailinput=document.getElementById('email')
            emailinput.value=uemail;
            var udptinput=document.getElementById('udpt')
            udptinput.value=udpt;
        //    var picinput=document.getElementById('upic')
            $("#upic").attr("src",'/img/user/'+upicvalue);
            $("#picvalue").attr("value","filename="+upicvalue)

            
        })

        function shuaxin(){
            var a=Math.round(Math.random()*4)+1;
            var a1='/img/user/'+a+'.jpg';
            $("#upic").attr("src",a1);
            $("#picvalue").attr("value","filename="+a+".jpg")
      //      alert(document.querySelector('[name="picvalue"]').value)

        }

        function freshUpicAndValue(input){
            $("#upic").attr("src",URL.createObjectURL(input.files[0]));
            $("#picvalue").attr("value",URL.createObjectURL(input.files[0]));
        }

    </script>
</head>
<body>

